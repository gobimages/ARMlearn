{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VNet-Inside": {
           "type": "string",
           "metadata": {
                "description": "description"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
  "name": "linkedTemplate",
  "type": "Microsoft.Resources/deployments",
  "apiVersion": "2018-05-01",
  "properties": {
      "mode": "Incremental",
      "templateLink": {
          "uri":"https://raw.githubusercontent.com/gobimages/ARMlearn/master/Beginner/LinkedTemplate.json"
      },
      "parameters": {
          "DPPublicIP":{"Value":"DPPublicIP"},
          "VNet-Inside":{"Value":"[parameters('VNet-Inside')]"}
      }
  }
},
        {
        "name": "[parameters('VNet-Inside')]",
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2018-08-01",
        "location": "[resourceGroup().location]",
        "tags": {
            "displayName": "VNet-Inside"
        },
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.0.0.0/16"
                ]
            },
            "subnets": [
                {
                    "name": "AD-Subnet",
                    "properties": {
                        "addressPrefix": "10.0.0.0/24"
                    }
                },
                {
                    "name": "DB-Subnet",
                    "properties": {
                        "addressPrefix": "10.0.1.0/24"
                    }
                }
            ]
        }
    },
  {
      "name": "[concat('ADPublicIP-',copyIndex())]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2018-08-01",
      "location": "[resourceGroup().location]",
      "tags": {
          "displayName": "[concat('AD',copyIndex())]"
      },
      "copy": {
          "name":"pubip",
          "count": 2
      },
      "properties": {
          "publicIPAllocationMethod": "Static"
      }
  },
  {
      
      "name": "[concat('ADnic-',copyIndex())]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2018-08-01",
      "location": "[resourceGroup().location]",
      "tags": {
          "displayName": "[concat('ADnic',copyIndex())]"
      },
      "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks', 'VNet-Inside')]"
      ],
      "copy": {
          "name":"nicip",
          "count": 2
      },
      "properties": {
          "ipConfigurations": [
              {
                  "name": "[concat('ADnicIP-',copyIndex())]",
                  "properties": {
                      "privateIPAllocationMethod": "Dynamic",
                      "publicIPAddress":{
                          "id":"[resourceId('Microsoft.Network/publicIPAddresses',concat('ADPublicIP-',copyIndex()))]"
                      },
                      "subnet": {
                          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'VNet-Inside', 'AD-Subnet')]"
                      }

                  }
              }
          ]
      }
  },
  {
      
      "name": "[concat('windowsVM1-',copyIndex())]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
          "[resourceId('Microsoft.Network/networkInterfaces', concat('ADnic-',copyIndex()))]"
      ],
      "tags": {
          "displayName": "[concat('AD-',copyIndex())]"
      },
      "copy":{
          "name": "VMcopy",
          "count": 2
      },
      "properties": {
          "hardwareProfile": {
              "vmSize": "Standard_A2"
          },
          "osProfile": {
              "computerName": "[concat('AD-',copyIndex())]",
              "adminUsername": "Gobinath",
              "adminPassword": "Mageswaran225"
          },
          "storageProfile": {
              "imageReference": {
                  "publisher": "MicrosoftWindowsServer",
                  "offer": "WindowsServer",
                  "sku": "2012-R2-Datacenter",
                  "version": "latest"
              },
              "osDisk": {
                  "name": "[concat('windowsVM1OSDisk-', copyIndex())]",
                  "caching": "ReadWrite",
                  "createOption": "FromImage",
                  "diskSizeGB": 500
              } ,
              "dataDisks": [
                  {
                      "lun": 1,
                      "name": "[concat('Disk-', copyIndex())]",
                      "diskSizeGB": 500,
                      "createOption": "Empty",
                      "managedDisk":{
                          "storageAccountType": "Standard_LRS"
                      }

                  }
              ]

                  
              
          },
          "networkProfile": {
              "networkInterfaces": [
                  {
                      "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('ADnic-',copyIndex()))]"
                  }
              ]
          }
      },
      "resources": [
      ]
  }
    ],
    "outputs": {},
    "functions": []
}