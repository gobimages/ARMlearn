{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "DPPublicIP": {
           "type": "string",
           "metadata": {
                "description": "description"
            }
        }
    },
    "variables": {},
    "resources": [
        {
  "name": "linkedTemplate",
  "type": "Microsoft.Resources/deployments",
  "apiVersion": "2018-05-01",
  "properties": {
      "mode": "Incremental",
      "templateLink": {
          "uri":"https://github.com/gobimages/ARMlearn/blob/master/Beginner/azuredeploy.json"
      },
      "parameters": {
          "VNet-Inside":{"value": "VNet-Inside"}
      }
  }
},
        
        {
            "name": "[parameters('DPPublicIP')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "DBPublicIP"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "name": "DBnic",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('DPPublicIP'))]",
                "linkedTemplate"
            ],
            "tags": {
                "displayName": "DBnic"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "DPnic-ip",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('DPPublicIP'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'linkedTemplate', 'DB-Subnet')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "DB",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', 'DBnic')]"
            ],
            "tags": {
                "displayName": "DB"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A2"
                },
                "osProfile": {
                    "computerName": "DB",
                    "adminUsername": "Gobinath",
                    "adminPassword": "Mageswaran225"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2012-R2-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "osdbdisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'DBnic')]"
                        }
                    ]
                }
            },
            "resources": [
            ]
        }
    ],
    "outputs": {},
    "functions": []
}